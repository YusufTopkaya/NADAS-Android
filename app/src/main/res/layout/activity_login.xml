<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.base.LoginActivity">

    <RelativeLayout
        android:id="@+id/relative_layout_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">

        <ImageView
            android:id="@+id/login_imgview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_header_login" />



        <Button
            android:id="@+id/login_btn_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/backarrow"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45">


        <TextView
            android:id="@+id/txt_login1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="right"
            android:text="Tekrar Hoşgeldin"
            android:textColor="@color/prime_dark_green"
            android:textSize="30dp" />


        <TextView
            android:id="@+id/txt_login2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_login1"
            android:layout_alignEnd="@+id/txt_login1"
            android:fontFamily="@font/poppins_regular"
            android:gravity="right"
            android:text="Hesabına Giriş Yap"
            android:textColor="@color/prime_dark_green"
            android:textSize="17dp" />


        <EditText
            android:id="@+id/login_txt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_login2"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edittext"
            android:hint="E-Posta"
            android:inputType="textEmailAddress"
            android:padding="13dp"
            android:textColorHint="@color/prime_dark_green"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/login_txt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_txt_email"
            android:layout_alignStart="@+id/login_txt_email"
            android:layout_alignEnd="@+id/login_txt_email"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext"
            android:hint="Şifre"
            android:inputType="textEmailAddress"
            android:padding="13dp"
            android:textColorHint="@color/prime_dark_green"
            android:textSize="13dp" />


        <CheckBox
            android:id="@+id/checbox_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/prime_dark_green"
            android:layout_alignStart="@+id/login_txt_password"
            android:layout_below="@+id/login_txt_password"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:paddingTop="2dp"
            android:textSize="17dp"
            android:scaleX=".8"
            android:scaleY=".8"
            android:text="Beni Hatırla" />

        <TextView
            android:id="@+id/txt_login3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_txt_password"
            android:layout_alignEnd="@+id/login_txt_password"
            android:layout_alignBottom="@id/checbox_remember"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"
            android:text="Şifreni mi unuttun?"
            android:textColor="@color/prime_dark_green"
            android:textSize="14dp" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="25dp"
            android:text="Giriş Yap"
            android:textAllCaps="false"
            android:textFontWeight="700"
            android:textSize="15dp"
            app:cornerRadius="15dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/login_btn_login"
            android:layout_marginTop="-30dp"
            android:gravity="center">


            <TextView
                android:id="@+id/txt_login4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/poppins"
                android:text="Hesabın yok mu?"
                android:textColor="@color/common_light_grey"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txt_login5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_btn_register"
                android:layout_toRightOf="@+id/txt_login4"
                android:fontFamily="@font/poppins"
                android:text="@string/app_register"
                android:textColor="@color/prime_dark_green" />

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>



