<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <Button
        android:id="@+id/login_btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/backarrow"
        android:backgroundTint="@color/prime_dark_green"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txt_login1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_btn_back"
        android:layout_marginTop="175dp"
        android:layout_marginRight="60dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="right"
        android:text="Tekrar Hoşgeldin"
        android:textColor="@color/prime_dark_green"
        android:textFontWeight="900"
        android:textSize="35dp" />


    <TextView
        android:id="@+id/txt_login2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_login1"
        android:layout_marginRight="60dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="right"
        android:text="Hesabına Giriş Yap"
        android:textColor="@color/prime_dark_green"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/login_txt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_login2"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/edittext"
        android:hint="E-Posta"
        android:inputType="textEmailAddress"
        android:padding="14dp"
        android:textColorHint="@color/prime_dark_green"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/login_txt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_txt_email"
        android:layout_marginStart="40dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/edittext"
        android:hint="Şifre"
        android:inputType="textEmailAddress"
        android:padding="14dp"
        android:textColorHint="@color/prime_dark_green"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_txt_password">

        <CheckBox
            android:id="@+id/checbox_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textColor="@color/prime_dark_green"

            android:scaleX=".9"
            android:scaleY=".9"
            android:text="Beni Hatırla" />

        <TextView
            android:id="@+id/txt_login3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:layout_marginRight="40dp"
            android:textColor="@color/prime_dark_green"
            android:text="Şifreni mi unuttun?" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout1"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Giriş Yap"
        android:textAllCaps="false"
        android:textFontWeight="700"
        android:textSize="15dp"
        app:cornerRadius="15dp" />


    <LinearLayout
        android:id="@+id/linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_btn_login"
        android:gravity="center"
        android:layout_marginTop="-25dp">

        <TextView
            android:id="@+id/txt_login4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Hesabın yok mu?"/>

        <TextView
            android:id="@+id/txt_login5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Kayıt ol" />

    </LinearLayout>

</RelativeLayout>














