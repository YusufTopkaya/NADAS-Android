<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imgview_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="56dp"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPostalAddress"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="328dp" />

    <TextView
        android:id="@+id/txt_login4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hesabın yok mu?"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="579dp" />

    <TextView
        android:id="@+id/txt_login5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kayıt ol"
        tools:layout_editor_absoluteX="256dp"
        tools:layout_editor_absoluteY="579dp" />

    <TextView
        android:id="@+id/txt_login2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hesabına Giriş Yap"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="271dp" />

    <CheckBox
        android:id="@+id/checbox_remember"
        android:layout_width="76dp"
        android:layout_height="53dp"
        android:text="Beni Hatırla"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="431dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="498dp" />

    <TextView
        android:id="@+id/txt_login3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Şifreni mi unuttun?"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="442dp" />

    <EditText
        android:id="@+id/txt_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="383dp" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="32dp"
        android:layout_height="37dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="56dp" />

    <TextView
        android:id="@+id/txt_login1"
        android:layout_width="107dp"
        android:layout_height="20dp"
        android:text="Tekrar Hoşgeldin"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="229dp" />

</androidx.constraintlayout.widget.ConstraintLayout>